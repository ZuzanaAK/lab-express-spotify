<ul>
    {{#each tracks}}
        <li>{{ this.name }}
            <br>
            {{#if this.preview_url}}
                <audio controls>
                    <source src="{{this.preview_url}}" type="audio/mpeg">
                </audio>
            {{else}}
                <p><b>No preview available! Sorry!</b></p>
            {{/if}}
        </li>
    {{/each}}
</ul>